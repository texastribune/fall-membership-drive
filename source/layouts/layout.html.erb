<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>

    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <%= stylesheet_link_tag "app" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <div class="page-wrap">
      <%= yield %>
      <div class="wrapper">
        <div class="main">
          <div class="container">
            <a name="mission-model"></a>
            <p class="text left"><%= lorem.sentences 7 %></p>
            <img class="flow right" src="<%= lorem.image('300x300', :random_color => true) %>">
          </div>
          <div class="container">
            <a name="investigative-reporting"></a>
            <div class="image-wrapper left">
              <img class="image" src="<%= lorem.image('120x100', :random_color => true) %>">
              <img class="image" src="<%= lorem.image('120x100', :random_color => true) %>">
              <img class="image" src="<%= lorem.image('120x100', :random_color => true) %>">
            </div>
            <p class="text right"><%= lorem.sentences 5 %></p>
            <img class="flow left" src="<%= lorem.image('300x300', :random_color => true) %>">
          </div>
          <div class="container">
            <a name="innovation-data"></a>
            <div class="image-wrapper right">
              <img class="image" src="<%= lorem.image('120x100', :random_color => true) %>">
              <img class="image" src="<%= lorem.image('120x100', :random_color => true) %>">
              <img class="image" src="<%= lorem.image('120x100', :random_color => true) %>">
            </div>
            <p class="text left"><%= lorem.sentences 5 %></p>
          </div>
          <div class="container">
            <a name="events-transparency"></a>
            <div class="image-wrapper left">
              <img class="image" src="<%= lorem.image('120x100', :random_color => true) %>">
              <img class="image" src="<%= lorem.image('120x100', :random_color => true) %>">
              <img class="image" src="<%= lorem.image('120x100', :random_color => true) %>">
            </div>
            <p class="text left"><%= lorem.sentences 5 %></p>
            <img class="flow right" style="margin-bottom: -20px" src="<%= lorem.image('300x300', :random_color => true) %>">
          </div>
          <div class="container">
            <a name="community-engagement"></a>
            <div class="image-wrapper right">
              <img class="image" src="<%= lorem.image('120x100', :random_color => true) %>">
              <img class="image" src="<%= lorem.image('120x100', :random_color => true) %>">
              <img class="image" src="<%= lorem.image('120x100', :random_color => true) %>">
            </div>
            <p class="text right"><%= lorem.sentences 5 %></p>
            <img class="flow left" src="<%= lorem.image('300x300', :random_color => true) %>">
          </div>
          <div class="container">
            <img class="image right" src="<%= lorem.image('400x100', :random_color => true, :text => 'dynamic cta') %>">
          </div>
        </div>
      </div>
    </div>
    <%= partial "footer" %>
  </body>
</html>
